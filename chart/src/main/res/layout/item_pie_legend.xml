<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_legend_item"
    android:layout_width="320in"
    android:layout_height="wrap_content"
    android:layout_margin="10in"
    android:background="@drawable/selector_item_radio_bg"
    android:padding="20in">

    <com.bonc.ioc.chart.view.ColorDotView
        android:id="@+id/dot_view"
        android:layout_width="40in"
        android:layout_height="40in"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20in"
        android:layout_marginEnd="20in"
        android:layout_toRightOf="@id/dot_view"
        android:textColor="@color/selector_radio_text" />

    <TextView
        android:id="@+id/text_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_label"
        android:layout_marginLeft="20in"
        android:layout_marginEnd="20in"
        android:layout_toRightOf="@id/dot_view"
        android:textColor="@color/selector_radio_text"
        android:textStyle="bold" />
</RelativeLayout>
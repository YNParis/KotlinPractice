        <activity android:name=".activity.UpdateAppActivity" />
        <activity android:name=".activity.JsonParseActivity" />
        <activity android:name=".activity.ui.login.LoginSystemActivity" />
        <activity android:name=".activity.charts.BarChartActivityMultiDataset" />
        <activity android:name=".activity.PieChartActivity" />
        <activity android:name=".activity.charts.BarChartActivity" />
        <activity android:name=".activity.charts.CombinedChartActivity" />
        <activity android:name=".activity.charts.PiePolylineChartActivity" />
        <activity android:name=".activity.charts.HorizontalBarChartActivity" />
        <activity android:name=".activity.charts.StackedBarActivity" />
        <activity android:name=".activity.charts.CandleStickChartActivity" />
        <activity android:name=".activity.SeekBarActivity" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.demos.kotlin.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- 指定Uri的共享路径，路径是module app_update中的 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>
    </application>

</manifest>
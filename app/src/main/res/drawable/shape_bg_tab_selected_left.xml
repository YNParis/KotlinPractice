<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTabSelected" />
            <corners
                android:topLeftRadius="@dimen/tab_corner_radius"
                android:topRightRadius="@dimen/tab_corner_radius" />
            <stroke
                android:width="@dimen/tab_border_width"
                android:color="@color/colorTabBorder" />
        </shape>
    </item>
    <item
        android:left="@dimen/tab_border_width"
        android:top="@dimen/tab_bottom_layer_offset_top">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTabSelected" />
        </shape>
    </item>
</layer-list>